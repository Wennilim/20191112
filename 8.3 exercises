#include <iostream>
#include <cmath>
using namespace std;


void main()
{
	int i;
	int score[5];
	double largest;
	cout << "Enter 5 scores: \n" ;

	for (int i = 0; i < 5; i++)
		cin >> score[i];

	largest = score[0];
	for (i = 1; i < 5; i++)
		if (largest < score[i])
			largest = score[i];

	cout << "\nThe highest score is " <<largest<< endl;

	int A,B,C,D,E;
	cout << "The scores and their differences from the highest are: \n" << endl;
	A = largest - 5;
	B = largest - 9;
	C = largest - 2;
	D = largest - 10;
	E = largest - 6;

	cout << "5 off by " << A << endl;
	cout << "9 off by " << B << endl;
	cout << "2 off by " << C << endl;
	cout << "10 off by " << D << endl;
	cout << "6 off by " << E << endl;


}
